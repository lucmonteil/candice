<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Kanda Yoga" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag "all" %>
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">

    <nav class="navbar navbar-default navbar-fixed-top navbar-wagon" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% link_to "/index.html", class: "navbar-brand" do %>
            <%= image_tag 'logo_omm.png' %>
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <li>
              <% link_to "/pricing.html" do %>
                <i class="fa fa-heart"></i> Les cours
              <% end %>
            </li>
            <li>
              <% link_to "/contact.html" do %>
                <i class="fa fa-female"></i> Mon parcours
              <% end %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Suivez-moi <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#"><i class="fa fa-facebook-square"></i> Facebook</a></li>
                <li><a href="https://www.instagram.com/kanda_yoga/"><i class="fa fa-twitter-square"></i> Instagram</a></li>
              </ul>
            </li>
            <!-- <li><a href="#" data-toggle="modal" data-target="#subscribe-modal" class="btn">Order your stylus</a></li> -->
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <%= yield %>

    <!-- Modal -->
    <div class="modal fade" id="subscribe-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Order your stylus</h4>
          </div>
          <div class="modal-body">
            <form action="">
              <div class="form-group">
                <label for="email">Your email</label>
                <input type="email" id="email" class="form-control" placeholder="alan@turing.org">
              </div>
              <div class="form-group">
                <label for="telephone">Your phone</label>
                <input type="text" id="telephone" class="form-control" placeholder="+33 6 42 42 42 42">
              </div>
              <input type="submit" value="Join the wait list" class="btn btn-danger btn-rounded btn-lg">
            </form>
          </div>
        </div>
      </div>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-4">
            <ul class="list-inline">
              <li><% link_to "https://www.instagram.com/kanda_yoga" do %>
                  <i class="fa fa-instagram"></i>
                <% end %>
              </li>
              <li><% link_to "#" do %>
                  <i class="fa fa-facebook"></i>
                <% end %>
              </li>
            </ul>
          </div>
          <div id="signature" class="col-xs-8 text-right">
            <a href="mailto:lucmonteil.pro@gmail.com?subject=Contact%20via%20Kanda%20Yoga" class="navbar-wagon-item navbar-wagon-button btn">Made with  <i class="fa fa-heart"></i>by Luc Monteil. Namast√©.
            </a>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
